{
  email mail@example.com
 # ZeroSSL als ACME CA
  acme_ca https://acme.zerossl.com/v2/DV90
}

(azure_dns01) {
  tls {
    issuer acme {
      dns azure {
        subscription_id {$AZURE_SUBSCRIPTION_ID}
        resource_group_name {$AZURE_RESOURCE_GROUP_NAME}
      }
      resolvers 8.8.8.8 1.1.1.1
    }
  }
}

foo.bar.com {
  import azure_dns01
  reverse_proxy localhost:1234
}